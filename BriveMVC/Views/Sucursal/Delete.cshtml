@model BriveMVC.Models.SucursalModel

@{
    ViewData["Title"] = "Eliminar Sucursal";
}

<div>
    <hr />
    <div class="card">
        <div class="card-header">
            <h1>Eliminar</h1>
        </div>
    </div>
    <div class="card-body">
        <h3 class="card-title">Estas seguro de eliminar la sucursal?</h3>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdSucursal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreSucursal)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Direccion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Telefono)
            </dd>            
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdSucursal" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="ObtenerSucursal" class="btn btn-light">Regresar</a>
        </form>
    </div>
</div>
